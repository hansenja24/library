@{
  Layout = "_Layout";
}

@section scripts {
  <script type = "text/javascript">
  var value = 1;

  $(document).ready(function(){
    $("#addAuthor").click(function(){
      value += 1;
      $("#newAuthor").append('<br><input type="text" name="author-name'+value+'" class="form-control">');
    });

    $("#addValue").click(function(){
      $("#newAuthor").append('<input id="number-loop" name = "number-loop" type = "hidden" value = "'+value+'">');
    });
  });
  </script>
}


<h1>Add Book</h1>
<form class="form-group" action="/book/view-all" method="post">
  <label for="book-title">Title:</label>
  <input type="text" name="book-title" class="form-control">
  <br>
  <label for="book-copies">Book Copies:</label>
  <input type="text" name="book-copies" class="form-control">
  <br>
  <label for="author-name1">Author Name:</label>
  <input type="text" name="author-name1" class="form-control">

  <div id="newAuthor">

  </div>
  <br>
  <button type="button" class="btn btn-info" name="button" id = "addAuthor">Add more Author</button><br>
  <br>



<button type="submit" class="btn btn-info" id = "addValue" name="button">Add Book</button>
</form>
